{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "lib": ["ES2020"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "ES2020",
    "types": [
      "node"
    ]
  },
  "include": [
    "server/**/*.js"
  ]
}